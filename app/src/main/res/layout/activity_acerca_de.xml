<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="1"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.40">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:textSize="30dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Revoltijo Literario"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Versión 1.0"/>
    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.26">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="#000000"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Equipo de Trabajo"/>

        <HorizontalScrollView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:weightSum="1"
                    android:layout_height="match_parent"
                    android:layout_width="200dp"
                    android:orientation="vertical"
                    android:elevation="5dp"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/foto1"
                        android:layout_marginRight="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/ava1"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="Carlos Alberto Cerda Valle"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="Programador"
                        android:layout_marginBottom="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:weightSum="1"
                    android:layout_height="match_parent"
                    android:layout_width="200dp"
                    android:orientation="vertical"
                    android:elevation="5dp"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/foto2"
                        android:layout_marginRight="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/imageView"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="Reynaldo Saúl Oporta Garzón"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="Programador Líder"
                        android:layout_marginBottom="4dp"/>
                </LinearLayout>

                <LinearLayout android:weightSum="1"
                    android:layout_height="match_parent"
                    android:layout_width="220dp"
                    android:orientation="vertical"
                    android:elevation="5dp"
                    android:layout_margin="8dp">

                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/foto3"
                        android:layout_marginRight="35dp"
                        android:layout_marginLeft="35dp"
                        android:layout_marginBottom="5dp"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="Rommel Alexander Maltez Gómez"/>

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:text="Programador y Diseñador"
                        android:layout_marginBottom="4dp"
                        android:id="@+id/textView"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.35">

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="@drawable/nicaragua"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>
</LinearLayout>
